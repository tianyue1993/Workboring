<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">


    <com.etcomm.dcare.widget.SimpleTitleBarWithRightText
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_alert_title"></com.etcomm.dcare.widget.SimpleTitleBarWithRightText>

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlebar"
        android:layout_marginTop="45dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_marginRight="@dimen/marginlarge"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="工号"
                android:textColor="@color/title_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/et_jobnumber"
                style="@style/common_edit_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginlarge"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:textColor="#5a5a5a"
                android:textCursorDrawable="@drawable/cursor_drawable" />

            <Button
                android:id="@+id/bind_jobnumber"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/btn_common_new_bg"
                android:gravity="center"
                android:text="绑定工号"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/job_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/marginlarge"
                android:scaleType="matrix"
                android:src="@drawable/rightindicator"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bottom_menu_bg_color" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_marginRight="@dimen/marginlarge"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username_tv"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="手机号"
                android:textColor="@color/title_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/et_phone"
                style="@style/common_edit_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginlarge"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:textColor="#5a5a5a"
                android:textCursorDrawable="@drawable/cursor_drawable" />

            <Button
                android:id="@+id/bind_phone"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/btn_common_new_bg"
                android:gravity="center"
                android:text="绑定手机号"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/phone_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/marginlarge"
                android:scaleType="matrix"
                android:src="@drawable/rightindicator"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bottom_menu_bg_color" />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_marginRight="@dimen/marginlarge"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="邮箱"
                android:textColor="@color/title_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/et_email"
                style="@style/common_edit_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginlarge"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:textColor="#5a5a5a"
                android:textCursorDrawable="@drawable/cursor_drawable" />

            <ImageView
                android:id="@+id/iv_del_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/nickname_delete"
                android:visibility="invisible" />

            <Button
                android:id="@+id/bind_email"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/btn_common_new_bg"
                android:gravity="center"
                android:text="绑定邮箱"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/email_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/marginlarge"
                android:scaleType="matrix"
                android:src="@drawable/rightindicator"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
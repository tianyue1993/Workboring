<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/pop_item_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_msg"
        style="@style/dialog_msg"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@dimen/common_dialog_width"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_alert_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_dialog_btn_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_left"
            android:layout_width="0dip"
            android:layout_height="@dimen/common_dialog_btn_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_ok_bg"
            android:gravity="center"
            android:text="@string/commit"
            android:textColor="@color/common_dialog_btn_textcolor"
            android:textSize="@dimen/common_dialog_btn_textsize" />

        <TextView
            android:id="@+id/span_view"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#c4c4c4" />

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="0dip"
            android:layout_height="@dimen/common_dialog_btn_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_cancel_bg"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/common_dialog_btn_textcolor"
            android:textSize="@dimen/common_dialog_btn_textsize" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.etcomm.dcare.widget.SimpleTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_alert_title" >
    </com.etcomm.dcare.widget.SimpleTitleBar>

    <!--
        fragment
        android:id="@+id/msgsetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.etcomm.dcare.fragment.MsgSettingPreferenceFragment"
        android:tag="msgsetting"
    -->

    <RelativeLayout
        android:id="@+id/msgsetting_msg_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mine_item_bg"
        android:clickable="true"
        android:visibility="gone"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/msgsetting_msg_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlarge"
            android:scaleType="matrix"
            android:src="@drawable/setting_goal"
            android:visibility="gone" />
        <!--
        <Switch
            android:id="@+id/msgsetting_msg_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marginlarge" />        -->

        <com.etcomm.dcare.widget.SwitchButton
            android:id="@+id/msgsetting_msg_switch"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marginlarge"
            app:kswAnimationDuration="300"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswBackMeasureRatio="1.4"
            app:kswThumbDrawable="@drawable/ios_thumb"
            app:kswThumbMarginBottom="-8dp"
            app:kswThumbMarginLeft="-5dp"
            app:kswThumbMarginRight="-5dp"
            app:kswThumbMarginTop="-2.5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_toRightOf="@+id/msgsetting_msg_imageView1"
            android:padding="8dp"
            android:text="消息推送"
            android:textColor="@color/common_black_text"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/msgsetting_msgdianzan_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/mine_item_bg"
        android:clickable="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/msgsetting_msgdianzan_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlarge"
            android:scaleType="matrix"
            android:src="@drawable/setting_goal"
            android:visibility="gone" />


        <com.etcomm.dcare.widget.SwitchButton
            android:id="@+id/msgsetting_msgdianzan_switch"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marginlarge"
            app:kswAnimationDuration="300"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswBackMeasureRatio="1.4"
            app:kswThumbDrawable="@drawable/ios_thumb"
            app:kswThumbMarginBottom="-8dp"
            app:kswThumbMarginLeft="-5dp"
            app:kswThumbMarginRight="-5dp"
            app:kswThumbMarginTop="-2.5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_toRightOf="@+id/msgsetting_msgdianzan_imageView1"
            android:padding="8dp"
            android:text="接收点赞提醒"
            android:textColor="@color/common_black_text"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/msgsetting_msgpinglun_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/mine_item_bg"
        android:clickable="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/msgsetting_msgpinglun_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlarge"
            android:scaleType="matrix"
            android:src="@drawable/setting_goal"
            android:visibility="gone" />


        <com.etcomm.dcare.widget.SwitchButton
            android:id="@+id/msgsetting_msgpinglun_switch"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marginlarge"
            app:kswAnimationDuration="300"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswBackMeasureRatio="1.4"
            app:kswThumbDrawable="@drawable/ios_thumb"
            app:kswThumbMarginBottom="-8dp"
            app:kswThumbMarginLeft="-5dp"
            app:kswThumbMarginRight="-5dp"
            app:kswThumbMarginTop="-2.5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_toRightOf="@+id/msgsetting_msgpinglun_imageView1"
            android:padding="8dp"
            android:text="接收评论提醒"
            android:textColor="@color/common_black_text"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout>
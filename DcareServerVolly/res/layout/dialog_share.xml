<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/pop_item_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        style="@style/dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.03"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"
        android:text="我是资讯标题"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_msg"
            style="@style/dialog_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:text="asdcjsfcbhksjchnisfhnsdhnujsdhncisdhnjkcnskdchnjdxkcnjdsknhckjdhnvckjdbvhjbazbvhxjbv"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_alert_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_dialog_btn_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_left"
            android:layout_width="0dip"
            android:layout_height="@dimen/common_dialog_btn_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_ok_bg"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="@dimen/common_dialog_btn_textsize" />

        <TextView
            android:id="@+id/span_view"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#c4c4c4" />

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="0dip"
            android:layout_height="@dimen/common_dialog_btn_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_cancel_bg"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/red"
            android:textSize="@dimen/common_dialog_btn_textsize" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/signin_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/marginmiddle"
            android:layout_marginTop="@dimen/marginlargehuge"
            android:text=""
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginmiddle"
            android:layout_marginLeft="@dimen/marginmiddle"
            android:layout_marginRight="@dimen/marginmiddle"
            android:layout_marginTop="@dimen/marginmiddle"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连接签到"
                android:textColor="@color/common_black_text" />

            <TextView
                android:id="@+id/signin_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="1"
                android:textColor="#f37f32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:textColor="@color/common_black_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/marginmiddle"
            android:layout_marginRight="@dimen/marginmiddle" />

        <TextView
            android:id="@+id/tips_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/marginmiddle"
            android:layout_marginLeft="@dimen/marginmiddle"
            android:layout_marginRight="@dimen/marginmiddle"
            android:drawableLeft="@drawable/mine_goldpoints"
            android:drawablePadding="5dp"
            android:text="+1"
            android:textColor="#fac158" />
    </LinearLayout>

</LinearLayout>
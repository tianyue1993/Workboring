<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/pop_item_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="0.00"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="          已发送          "
        android:textSize="19sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_complete" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_alert_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_dialog_btn_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_left"
            android:layout_width="0dip"
            android:layout_height="@dimen/common_dialog_btn_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_ok_bg"
            android:gravity="center"
            android:text="留在本页"
            android:textSize="@dimen/common_dialog_btn_textsize" />

        <TextView
            android:id="@+id/span_view"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#c4c4c4" />

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="0dip"
            android:layout_height="@dimen/common_dialog_btn_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_cancel_bg"
            android:gravity="center"
            android:text="返回资讯"
            android:textColor="@color/common_yel"
            android:textSize="@dimen/common_dialog_btn_textsize" />
    </LinearLayout>

</LinearLayout>
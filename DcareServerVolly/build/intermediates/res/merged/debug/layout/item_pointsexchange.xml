<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/gift_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/marginmiddle"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_black_text"
            android:textSize="@dimen/common_text_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/gift_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="700积分："
                android:textColor="@color/common_light_black_color"
                android:textSize="@dimen/common_text_small" />

            <RelativeLayout
                android:id="@+id/rl_realprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp" >

                <TextView
                    android:id="@+id/gift_realprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="700元"
                    android:textColor="@color/common_light_black_color"
                    android:textSize="@dimen/common_text_small" />

                <View
                    android:layout_width="45dp"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:background="@color/common_light_black_color" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/gift_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sssdd"
            android:textColor="@color/common_light_black_color"
            android:textSize="@dimen/common_text_small" />

        <LinearLayout
            android:id="@+id/ll_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数    量："
                android:textColor="@color/common_light_black_color"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/reduce_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:text="   -   "
                android:textColor="@color/common_light_black_color"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/bye_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:textColor="@color/common_light_black_color"
                android:textSize="@dimen/common_text_small" />

            <TextView
                android:id="@+id/add_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="   +    "
                android:textColor="@color/common_light_black_color"
                android:textSize="@dimen/common_text_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/draw_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/common_light_black_color"
            android:textSize="@dimen/common_text_small" />

        <TextView
            android:id="@+id/gift_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/common_light_black_color"
            android:textSize="@dimen/common_text_small" />

        <Button
            android:id="@+id/gift_exchange"
            style="@style/common_btn_style"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/marginsmall"
            android:layout_marginTop="@dimen/marginsmall"
            android:background="@drawable/btn_exchange_selector"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:text="兑换"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/describetext"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/marginsmall"
            android:layout_marginTop="@dimen/marginlittle"
            android:text="请联系管理员领取奖品"
            android:textColor="@color/text_gray_unclick"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
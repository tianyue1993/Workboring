<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <com.etcomm.dcare.widget.SimpleTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_alert_title"
        android:layout_alignParentTop="true" >
    </com.etcomm.dcare.widget.SimpleTitleBar>

    <LinearLayout
        android:id="@+id/old_psd_li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_weight="2.5"
            android:gravity="right"
            android:text="旧密码:"
           
            android:textColor="#f08300"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/old_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入6-12位数字或字母"
            android:inputType="textPassword"
            android:textColor="#5a5a5a"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:textColorHint="#c7b88f"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:maxLength="12"
            android:lines="1"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/pic1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0ae8b" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/new_pwd_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_weight="2.5"
            android:gravity="right"
            android:text="新密码:"
            android:textColor="#f08300"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入6-12位数字或字母"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:inputType="textPassword"
            android:textColor="#5a5a5a"
            android:textColorHint="#c7b88f"
            android:maxLength="12"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0ae8b" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/renew_pwd_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginlarge"
            android:layout_weight="2.5"
            android:gravity="right"
            android:text="确认密码:"
            android:textColor="#f08300"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/renew_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:hint="请输入6-12位数字或字母"
            android:inputType="textPassword"
            android:textColor="#5a5a5a"
            android:textColorHint="#c7b88f"
            android:maxLength="12"
             android:lines="1"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0ae8b" />

    <CheckBox
        android:id="@+id/isShowPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/marginsmall"
        android:layout_marginTop="24dp"
        android:button="@drawable/checkbox"
        android:checked="false"
        android:text="显示密码"
        android:textColor="#f08300" />

    <Button
        android:id="@+id/btn_next"
        style="@style/common_btn_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_common_bg"
        android:text="完成"
        android:textColor="#f4f3f3" />

</LinearLayout>
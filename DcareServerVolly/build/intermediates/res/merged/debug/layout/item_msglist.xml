<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="60dp" >

    <ImageView
        android:id="@+id/msg_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/marginsmall"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/msg_avatar"
        android:textColor="@color/common_black_text"
        android:textSize="@dimen/common_text_small" />

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/marginmiddle"
        android:layout_marginTop="@dimen/marginmiddle"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/msg_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_title"
        android:layout_toRightOf="@+id/msg_avatar"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_text_mini" />

    <com.etcomm.dcare.widget.NoScrollGridView
        android:id="@+id/disscuss_pics_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_detail"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/msg_avatar"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:verticalSpacing="10dp" >
    </com.etcomm.dcare.widget.NoScrollGridView>

</RelativeLayout>
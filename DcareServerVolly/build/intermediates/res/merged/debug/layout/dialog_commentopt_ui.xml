<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/pop_alert_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/btn_up"
        android:layout_width="@dimen/common_dialog_width"
        android:layout_height="@dimen/common_dialog_btn_height"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/dialog_btn_ok_bg"
        android:gravity="center"
        android:text="@string/commit"
        android:textColor="@color/black"
        android:textSize="@dimen/common_dialog_btn_textsize" />

    <ImageView
        android:id="@+id/dialog_centerline"
        android:layout_width="@dimen/common_dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pop_alert_line" />

    <TextView
        android:id="@+id/btn_bottom"
        android:layout_width="@dimen/common_dialog_width"
        android:layout_height="@dimen/common_dialog_btn_height"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/dialog_btn_cancel_bg"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="#272624"
        android:textSize="@dimen/common_dialog_btn_textsize" />

</LinearLayout>